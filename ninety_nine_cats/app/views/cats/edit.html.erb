<h1>New Cat</h1>
<%= render 'form', cat: @cat %>

<form action="<%=cat_url(@cat)%>" method= "POST">

  <input type="hidden" name="_method" value = "patch">
  <label for="birth_date">Birth Date </label>
  <input type="date" value= <%= @cat.birth_date%> id="cat_birth_date">

  <label for="color"> Choose a color: </label>

  <select id="color_select">
    <option value = <% @cat.color%> > --Select a color-- </option>

    <%Cat::COLORS.each do |color|%>
        <option value=<%=color%>  <%= @cat.color == color ? "selected" : "" %>   ><%=color%></option>
    <%end%>
    </select>


  <label for="cat_name"> Name </label>
  <input type="text" value= <%= @cat.name%> id="cat_name">


    <p>Please choose cat's sex:</p>
    <input type="radio" value= <%= "M" %> <%= @cat.sex == "M" ? "checked" : "" %> id="M">
    <label for="M"> M </label>

    <input type="radio" value= <%= "F" %> <%= @cat.sex == "F" ? "checked" : "" %> id="F">
    <label for="F"> F </label>

  <label for="description"> Description </label>
  <textarea id="cat_description"> <%= @cat.description%> </textarea>


  <input type="submit" value="Submit">
</form>